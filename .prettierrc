{
    "tailwindConfig": "./tailwind.config.js",
    "plugins": [
        "prettier-plugin-blade",
        "prettier-plugin-tailwindcss",
        "prettier-plugin-organize-attributes"
    ],
    "attributeGroups": [
        "^hidden$",
        "^disabled",
        "^id$",
        "^name$",
        "^data-",
        "^src$",
        "^for$",
        "^href$",
        "^value$",
        "^type$",
        "^rows$",
        "^placeholder$",
        "^autocomplete$",
        "^title$",
        "^alt$",
        "^role$",
        "^method",
        "^action",
        "^class$",
        "^aria-",
        "^tabindex$",
        "^style$"
    ],
    "printWidth": 120,
    "overrides": [
        {
            "files": [
                "*.blade.php"
            ],
            "options": {
                "parser": "blade",
                "printWidth": 120,
                "singleQuote": true
            }
        }
    ]
}
