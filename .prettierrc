{
    "tailwindConfig": "./tailwind.config.js",
    "plugins": [
        "prettier-plugin-blade",
        "prettier-plugin-tailwindcss",
        "prettier-plugin-organize-attributes"
    ],
    "attributeGroups": ["^id$", "^name$", "^data-", "^src$", "^for$", "^type$", "^href$", "^value$", "^rows$", "^placeholder$", "^title$", "^alt$", "^role$", "^method", "^action", "^class$", "^aria-", "^tabindex$", "^style$"],
    "overrides": [
        {
            "files": [
                "*.blade.php"
            ],
            "options": {
                "parser": "blade",
                "printWidth": 120
            }
        }
    ]
}
